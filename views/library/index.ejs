<%- include('../layouts/layout-start', { title: 'Все книги' }) %>

<a href="/books/create" class="btn btn-primary mb-4 mt-4">Добавить новую книгу</a>

<% if (books.length > 0) { %>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Название</th>
                <th>Описание</th>
                <th>Автор</th>
            </tr>
            </thead>
            <tbody>
            <% books.forEach(book => { %>
                <tr>
                    <td><%= book.title %></td>
                    <td><%= book.description %></td>
                    <td><%= book.authors %></td>
                    <td>
                        <div class="d-flex gap-2">
                            <a href="/books/<%= book.id %>/update" class="btn btn-sm btn-warning flex-grow-1">Редактировать</a>
                            <form action="/books/<%= book.id %>/delete" method="POST" class="d-inline flex-grow-1">
                                <button type="submit" class="btn btn-sm btn-danger w-100">Удалить</button>
                            </form>
                        </div>
                    </td>
                </tr>
            <% }) %>
            </tbody>
        </table>
    </div>
<% } else { %>
    <div class="alert alert-info">Книги не найдены</div>
<% } %>

<%- include('../layouts/layout-end') %>